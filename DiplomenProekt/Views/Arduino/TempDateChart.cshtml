<div class="row">
    <div class="col-6">
        <h3>Bar chart about temperature in the wearhouse</h3>
        <canvas id="barChart" width="100" height="110" style="width:200px; height:110px;"></canvas>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: "/Arduino/GetChartData",
            data: "",
            contentType: "application/json; charset=utf8",
            dataType: "json",
            success: OnSuccess,
        });
        function OnSuccess(data) { 
            const barChart = document.getElementById('barChart');
            // var _data = ;//[{ReadedTemp:34,RecTime:13:43}]
            var _labels = data["label"];
            var _Date = data["temp"];
            var colors = ["Blue", "Blue", "Blue", "Blue", "Blue", "Blue"];

            new Chart(barChart,
                {
                    type: 'bar',
                    data: {

                    labels: _labels,
                        datasets: [{
                        backgroundColor: colors,
                        data: _Date,
                        borderWidth:1,
                        }]
                    }
            });
        }
    }); 
</script>